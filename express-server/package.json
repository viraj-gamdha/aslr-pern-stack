{
  "name": "express-server-doslr",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "build": "npm run lint && tsc -p . && tsc-alias",
    "dev": "tsx watch src/app.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "db:up": "docker compose -f docker-compose-pg.yml up -d",
    "db:generate": "cross-env NODE_OPTIONS=\"--import tsx\" drizzle-kit generate",
    "db:migrate": "cross-env NODE_OPTIONS=\"--import tsx\" drizzle-kit migrate",
    "db:push": "cross-env NODE_OPTIONS=\"--import tsx\" drizzle-kit push",
    "db:pull": "cross-env NODE_OPTIONS=\"--import tsx\" drizzle-kit pull",
    "db:studio": "cross-env NODE_OPTIONS=\"--import tsx\" drizzle-kit studio"
  },
  "keywords": [],
  "author": "",
  "type": "module",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "2.8.5",
    "dotenv": "17.2.1",
    "drizzle-orm": "^0.44.5",
    "express": "5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "resend": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "9.33.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "2.8.19",
    "@types/express": "4.17.21",
    "@types/helmet": "4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "1.9.10",
    "@types/node": "24.3.0",
    "@types/pg": "^8.15.5",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "9.33.0",
    "globals": "16.3.0",
    "tsc-alias": "1.8.16",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "typescript-eslint": "8.39.1"
  }
}
